# ── spot-backend ──
SPOT_ENV=dev
SPOT_DEBUG=1
SPOT_SECRET_KEY=django-dev-secret-key-change-me
SPOT_ALLOWED_HOSTS=* localhost 127.0.0.1 [::1]
SPOT_DB_ENGINE=django.db.backends.postgresql
SPOT_DB_NAME=spotdb
SPOT_DB_USER=spot
SPOT_DB_PASS=spot
SPOT_DB_HOST=spot-db
SPOT_DB_PORT=5432
SPOT_SKIP_FIREBASE=0
SPOT_USE_S3=1
SPOT_AWS_ACCESS_KEY_ID=test
SPOT_AWS_SECRET_ACCESS_KEY=test
SPOT_AWS_BUCKET_NAME=spot-media-local
SPOT_AWS_REGION=us-east-1
SPOT_AWS_S3_ENDPOINT_URL=http://spot-localstack:4566
SPOT_AWS_S3_ADDRESSING_STYLE=path
SPOT_AWS_S3_SIGNATURE_VERSION=s3v4
SPOT_LOCALSTACK_DEBUG=0

# ── console-backend ──
CONSOLE_DB_NAME=console
CONSOLE_DB_USER=console
CONSOLE_DB_PASSWORD=console
CONSOLE_DB_HOST=console-db
CONSOLE_DB_PORT=5432
CONSOLE_SECRET_KEY=django-console-dev-secret-key-change-me

# ── console-frontend ──
NEXT_PUBLIC_API_URL=http://localhost:8000

